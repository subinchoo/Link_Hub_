<!-- Top navigation bar with brand and menu toggle button -->
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">LinkHubApp</a>
        <!-- Hamburger menu button for collapsing/expanding the sidebar -->
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<!-- Sidebar navigation menu, collapsible on small screens -->
<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <!-- Home navigation link -->
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <!-- Add more navigation links here if needed -->
    </nav>
</div>

@code {
    // Controls whether the navigation menu is collapsed or expanded
    private bool collapseNavMenu = true;

    // Returns the CSS class for collapsing the nav menu
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    // Toggles the navigation menu open/closed
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
