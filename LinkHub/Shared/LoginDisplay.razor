@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <form method="post" action="/Identity/Account/Logout">
            <span class="me-2 text-info">Hello, @context.User.Identity.Name!</span>
            <button type="submit" class="btn btn-sm btn-outline-danger">Logout</button>
           

        </form>
    </Authorized>
    <NotAuthorized>
        <a class="btn btn-sm btn-outline-primary me-2" href="/Identity/Account/Register">Register</a>
        <a class="btn btn-sm btn-outline-secondary" href="/Identity/Account/Login">Login</a>
    </NotAuthorized>
</AuthorizeView>
